<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Instagram Clone</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

  <style>
    body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #000;
    color: #fff;
}

.profile-container {
    max-width: 900px;
    margin: 20px auto;
    padding: 20px;
    background: #121212;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.5);
}

.profile-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20px;
    border-bottom: 1px solid #333;
    background: #1f1f1f;
    border-radius: 10px;
    margin-bottom: 20px;
}

.profile-info h1 {
    font-size: 28px;
    margin-bottom: 10px;
    color: #fff;
}

.profile-info p {
    margin: 5px 0;
    font-size: 16px;
    color: #b3b3b3;
}

.posts {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 20px;
}

.post {
    position: relative;
    overflow: hidden;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.7);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.post:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.9);
}

.post img {
    width: 100%;
    height: 250px;
    object-fit: cover;
    border-radius: 10px 10px 0 0;
}

.post-info {
    padding: 10px;
    background: #1f1f1f;
    border-top: 1px solid #333;
    text-align: center;
    font-size: 14px;
    color: #b3b3b3;
}

.fa-heart {
    color: #ed4956;
    margin-right: 5px;
}

.fa-comment {
    color: #0095f6;
    margin-right: 5px;
}

@media (max-width: 768px) {
    .profile-header {
        flex-direction: column;
        align-items: flex-start;
    }

    .posts {
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    }

    .post img {
        height: 200px;
    }
}

  </style>
</head>
<body>
  <div class="profile-container">
    <div class="profile-header">
      <div class="profile-info">
        <h1><%= data.name %></h1>
        <p><strong><%= data.posts.length %></strong> Posts</p>
        <p><strong><%= data.followers %></strong> Followers</p>
        <p><strong><%= data.following %></strong> Following</p>
      </div>
    </div>

    <div class="posts">
      <% data.posts.forEach(post => { %>
        <div class="post">
          <img src="<%= post.image %>" alt="Post Image" />
          <div class="post-info">
            <p><i class="fa fa-heart"></i> <%= post.likes %></p>
            <p><i class="fa fa-comment"></i> <%= post.comments %></p>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
